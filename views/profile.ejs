<iu-popup></iu-popup>

<!-- current mesh display -->
<div class="iu-row-wrapper iu-row-wrapper--full-width iu-row-wrapper--mv">
    <div class="iu-row">
        <div class="iu-content">
            <div class="iu-box iu-box--mesh-view">
                <model-viewer class="iu-mv" src="/meshes/sunflower_character.glb" ar ar-modes="webxr scene-viewer quick-look" camera-controls poster="poster.webp" shadow-intensity="1">
                    <div class="progress-bar hide" slot="progress-bar">
                        <div class="update-bar"></div>
                    </div>
                </model-viewer>
            </div>
        </div>
    </div>
</div>

<div class="iu-row-wrapper">
    <div class="iu-row">
        <div class="iu-content">
            <div class="iu-box iu-box--title">
                <h2>Your Uploads, <%= locals.username %></h2>
            </div>
        </div>
    </div>
</div>

<!-- uploaded meshes -->
<div class="iu-row-wrapper">
    <div class="iu-row">
        <div class="iu-content">
            <div class="iu-box">
                <ul class="iu-um-list">

                    <div class="iu-um iu-um--active">
                        <div class="iu-um__color">
                            <!-- color indicator for user -->
                        </div>
                        <div class="iu-um__desc">
                            <h4 class="iu-um__title">Your Mesh</h4>
                            <div class="flex">
                                <p><b>Date: </b></p><p class="iu-um__date">01.01.23</p>
                                <p><b>File: </b></p><p class="iu-um__filename">filename.glb</p>
                            </div>
                        </div>
                        <div class="iu-um__del"><i class="fa-solid fa-trash"></i></div>
                    </div>

                    <div class="iu-um">
                        <div class="iu-um__color">
                            <!-- color indicator for user -->
                        </div>
                        <div class="iu-um__desc">
                            <h4 class="iu-um__title">Your Mesh</h4>
                            <div class="flex">
                                <p><b>Date: </b></p><p class="iu-um__date">01.01.23</p>
                                <p><b>File: </b></p><p class="iu-um__filename">filename.glb</p>
                            </div>
                        </div>
                        <div class="iu-um__del"><i class="fa-solid fa-trash"></i></div>
                    </div>

                </ul>
            </div>
        </div>
    </div>
</div>

</body>
<footer>
    <script src="main.js"></script>
</footer>
</html>
